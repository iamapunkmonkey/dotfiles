alias lll='ll -tra'

alias fetch='git fetch'
alias makettd='rm -rf bundle && ./configure --without-freetype LDFLAGS="-stdlib=libstdc++" && make -j8 && make bundle'

#SPOTIFY COMMANDS
alias play='spotify play'
alias pause='spotify pause'
alias stop='spotify stop'
alias next='spotify next &&  playing'
